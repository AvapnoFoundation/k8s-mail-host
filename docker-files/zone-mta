FROM node:12-alpine3.14 as builder

ARG version=2.4.2

RUN apk add --no-cache git python3 make g++

WORKDIR /zone-mta

RUN git clone --depth 1 --branch master https://github.com/AvapnoHelpingHand/zone-mta ./

RUN npm install --production


FROM node:12-alpine3.14 as app

ENV NODE_ENV production

RUN apk add --no-cache tini

WORKDIR /zone-mta
COPY --from=builder /zone-mta /zone-mta

ENTRYPOINT ["tini", "--", "node", "app.js"]
CMD ["--config=config/zonemta.toml"]