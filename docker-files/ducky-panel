FROM node:12-alpine3.14 as builder

RUN apk add --no-cache git python3 make g++

WORKDIR /ducky-panel

RUN git clone --depth 1 https://github.com/AvapnoHelpingHand/DuckyAPI.git ./
RUN npm install --production
RUN npm uninstall duckypanel
RUN git clone --depth 1 https://github.com/AvapnoHelpingHand/DuckyPanel.git ./ducky-panel
RUN cd ./ducky-panel
RUN npm install --production
RUN npm run build --production
RUN cd ..
RUN npm install --production ducky-panel/dist
RUN npm run clean --production
RUN npm run build --production


FROM node:12-alpine3.14 as app

ENV NODE_ENV production

RUN apk add --no-cache tini

WORKDIR /ducky-panel
COPY --from=builder /ducky-panel /ducky-panel

ENTRYPOINT ["/sbin/tini", "--", "npm", "run", "buildstart"]