FROM node:12-alpine3.14 as builder

RUN apk add --no-cache git python3 make g++

WORKDIR /ducky-panel

RUN git clone --depth 1 --branch master https://github.com/AvapnoHelpingHand/DuckyAPI.git ./
RUN npm install --production

RUN npm uninstall duckypanel
RUN git clone --depth 1 --branch master https://github.com/AvapnoHelpingHand/DuckyPanel.git ./frontend
RUN cd ./frontend && npm install && npm run postinstall && npm run build-for-publish

RUN ls ./frontend/dist
RUN echo "1234abs"
RUN rm -rf ./frontend/node_modules
RUN find ./frontend -mindepth 1 -not -regex '^./frontend/dist\(/.*\)?' -delete
RUN ls
RUN ls ./frontend
RUN ls ./frontend/dist
RUN npm install --production ./frontend/dist
RUN npm run clean
RUN npm run build


FROM node:12-alpine3.14 as app

ENV NODE_ENV production

RUN apk add --no-cache tini

WORKDIR /ducky-panel
COPY --from=builder /ducky-panel /ducky-panel

ENTRYPOINT ["/sbin/tini", "--", "npm", "run", "buildstart"]