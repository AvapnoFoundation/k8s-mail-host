FROM alpine:3.14

RUN addgroup -g 2001 clamav && adduser -u 2001 -G clamav -h /var/lib/clamav -D -s /sbin/nologin clamav

RUN apk --no-cache add tini clamav clamav-libunrar clamav-milter \
    && mkdir /run/clamav \
    && chown clamav:clamav /run/clamav

EXPOSE 3310
EXPOSE 7357

ENTRYPOINT ["tini", "--", "/bin/sh", "-c"]