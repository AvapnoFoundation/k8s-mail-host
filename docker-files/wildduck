FROM node:12-alpine3.14 as builder

ARG version=1.36.0

RUN apk add --no-cache git python3 make g++

WORKDIR /wildduck

RUN git clone --depth 1 --branch v${version} https://github.com/AvapnoHelpingHand/wildduck.git ./
RUN npm install --production


FROM node:12-alpine3.14 as app

ENV NODE_ENV production

RUN apk add --no-cache tini

WORKDIR /wildduck
COPY --from=builder /wildduck /wildduck

ENTRYPOINT ["tini", "--", "node", "server.js"]